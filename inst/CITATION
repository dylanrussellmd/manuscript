  title        = "Manuscript title",
  author       = personList(as.person("Dylan Russell")),
  # UNCOMMENT WHEN PUBLISHED journal      = "Journal of Statistical Software",
  # UNCOMMENT WHEN PUBLISHED year         = "2011",
  # UNCOMMENT WHEN PUBLISHED volume       = "40",
  # UNCOMMENT WHEN PUBLISHED number       = "3",
  # UNCOMMENT WHEN PUBLISHED pages        = "1--25",
  url          = "https://www.github.com/dylanrussellmd/manuscript/",
  
  textVersion  =
  paste("Dylan Russell.",
        "Manuscript title",
        "URL https://www.github.com/dylanrussellmd/manuscript.")
)

